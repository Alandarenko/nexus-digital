RewriteEngine On

# API rewrites: /api/chat → /api/chat.php, /api/send → /api/send.php
RewriteRule ^api/chat$ /api/chat.php [L]
RewriteRule ^api/send$ /api/send.php [L]

# Block .md files
RewriteRule \.md$ - [R=404,L]

# Custom 404 page
ErrorDocument 404 /404.html

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    # HSTS — раскомментировать после настройки SSL
    # Header set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=(), usb=()"
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://mc.yandex.ru; style-src 'self' 'unsafe-inline'; font-src 'self'; img-src 'self' data: https://mc.yandex.ru; connect-src 'self' https://mc.yandex.ru; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"
    Header set Cross-Origin-Opener-Policy "same-origin"
    Header set X-Permitted-Cross-Domain-Policies "none"
    Header unset X-Powered-By
</IfModule>

# Block access to .env and .git
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Block access to Node.js files (legacy)
<FilesMatch "\.(js)$" >
    <If "%{REQUEST_URI} =~ m#^/api/#">
        Require all denied
    </If>
</FilesMatch>
